@namespace AdminDashboard.Server.Shared

@using AdminDashboard.Infrastructure.Contracts

@inject IAuthenticationRepository _authRepo
@inject NavigationManager _navigationManager

<MudCard Elevation="0" Square="true" Class="@Class">
    <MudCardHeader>
        <CardHeaderAvatar>
            @if (string.IsNullOrEmpty(ImageDataUrl))
            {
                <MudAvatar Color="Color.Secondary">@FirstLetterOfName</MudAvatar>
            }
            else
            {
                <MudAvatar Image="@ImageDataUrl" Style="height:50px; width:50px;"> </MudAvatar>
            }
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@FullName</MudText>
            <MudText Typo="Typo.caption">@Email</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>