<MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
    <MudDialog>
        <TitleContent>
            @{
                if (!string.IsNullOrEmpty(phone))
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        Thêm mới
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        Cập nhật 
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => fullName)" @bind-Value="fullName" Required="true" Label="Họ và tên" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => phone)" @bind-Value="phone" Required="true" Label="Số điện thoại" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => email)" @bind-Value="email" Required="true" Label="Địa chỉ email" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Đóng</MudButton>
            @if (!string.IsNullOrEmpty(phone))
            {
                <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Disabled="@(!success)" Color="Color.Secondary">Cập nhật</MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Disabled="@(!success)" Color="Color.Success">Tạo mới</MudButton>
            }
        </DialogActions>
    </MudDialog>
</MudForm>